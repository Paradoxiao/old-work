{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc debug",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-std=c99",
                "-g",
                "-Wall",
                "${fileDirname}/${fileBasename}",
                "-o",
                "${fileDirname}/out.exe"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
        },
        {
            "label": "g++ debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-g",
                "-Wall",
                "${fileDirname}/${fileBasename}",
                "-o",
                "${fileDirname}/out.exe"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}